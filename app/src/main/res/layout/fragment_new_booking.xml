<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.NewBookingFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp">

        <TableLayout
            android:id="@+id/TableLayout_newBookingFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TableRow
                android:id="@+id/TableLayout_newBookingFragment_row1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginVertical="3dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="WM1"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="WM2"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="D1"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="1"/>

                </TableRow>

            <TableRow
                android:id="@+id/TableLayout_newBookingFragment_row2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="08 - 10:"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="1"/>

            </TableRow>

        </TableLayout>

    </ScrollView>

    <Button
        android:id="@+id/Button_newBookingFragment_ok"
        style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20sp"
        android:background="@drawable/button_border_app"
        android:paddingHorizontal="40dp"
        android:text="@string/ok"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

</RelativeLayout>